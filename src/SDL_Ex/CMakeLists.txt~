cmake_minimum_required(VERSION 2.8)

add_library(SDL_ExShared SHARED SDL_Ex.c)
add_library(SDL_ExStatic STATIC SDL_Ex.c)

set_target_properties(
	SDL_ExShared SDL_ExStatic
	PROPERTIES OUTPUT_NAME SDL_Ex
)

add_executable(test-ligne test-ligne.c)
target_link_libraries(test-ligne SDL_Ex SDLmain SDL)

add_test(test-ligne ./test-ligne)

